{% extends 'base.html.twig' %}


{% block body %}
 <section class='articles'> 
 {% for article in articles %}
  <article>
   <h2>{{article.title}} </h2>
    <div class="metadata">Edité le {{article.createdAt | date("m/d/Y")}} à {{article.createdAt | date("h/i")}}</div> 
 <div class="content">             <img src="{{article.image}}" alt="">             {{article.content | raw }} <a href="{{ path('blog_show', {id: article.id}) }}" class="btn btnprimary">Lire la suite</a>          
  </div>  
     </article> 
     {% endfor %} 
     </section> 
 {% endblock %}